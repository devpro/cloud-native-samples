{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "DistributedTracing": {
    "IsEnabled": false,
    "ServiceName": "",
    // Framework values: OpenTracing, OpenTelemetry
    "Framework": "OpenTelemetry",
    // Reporter values: Jaeger
    "Reporter": "Jaeger",
    "PathToIgnore": "/swagger,/health,/favicon.ico",
    "Jaeger": {
      "AgentHost": "",
      "AgentPort": -1
    }
  }
}
